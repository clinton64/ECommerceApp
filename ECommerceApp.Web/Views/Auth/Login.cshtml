@model LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4">
            <!-- Header -->
            <div class="card-header bg-gradient text-white text-center"
                 style="background: linear-gradient(90deg, #6366f1, #3b82f6);">
                <h3 class="fw-bold mb-0">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                </h3>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <!-- Username -->
                    <div class="mb-4">
                        <label asp-for="UserName" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                            <input asp-for="UserName" class="form-control rounded-end" placeholder="Enter your username" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control rounded-end" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary rounded-pill shadow-sm py-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Login
                        </button>
                    </div>

                    <div class="text-center">
                        <a href="#" class="text-decoration-none small">Forgot your password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
