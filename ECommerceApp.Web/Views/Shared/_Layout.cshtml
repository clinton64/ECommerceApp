<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(90deg, #6366f1, #3b82f6);">
            <div class="container">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-check-fill me-2"></i> E-Commerce
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-semibold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill me-1"></i> Manage
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow rounded-3">
                                    <li><a class="dropdown-item" asp-controller="Coupon" asp-action="Index"><i class="bi bi-ticket-perforated me-2"></i> Coupons</a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" ><i class="bi bi-box-seam me-2"></i> Products</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Auth Buttons -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light rounded-pill px-3">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout (@User.Identity?.Name)
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-light rounded-pill px-3" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main class="flex-grow-1 container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center text-white py-3 mt-auto" style="background: linear-gradient(90deg, #3b82f6, #6366f1);">
        <div class="container">
            <small>
                &copy; 2025 - <strong>ECommerceApp.Web</strong> |
                <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-underline">Privacy</a>
            </small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
