@model CartDto

<div class="container my-5">
    <form asp-action="Checkout" method="post">
        <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
            <!-- Header -->
            <div class="card-header bg-primary bg-gradient text-white py-3">
                <h2 class="mb-0">
                    <i class="bi bi-bag-check-fill me-2"></i> Checkout
                </h2>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                <div class="row g-4">
                    <!-- Customer Info -->
                    <div class="col-12 col-lg-5">
                        <h5 class="border-bottom pb-2 mb-3 text-primary fw-semibold">Billing Details</h5>
                        <div class="form-group mb-3">
                            <label asp-for="CartHeader.Name" class="form-label">Full Name</label>
                            <input asp-for="CartHeader.Name" class="form-control" required placeholder="Enter your full name" />
                            <span asp-validation-for="CartHeader.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CartHeader.Email" class="form-label">Email</label>
                            <input asp-for="CartHeader.Email" type="email" class="form-control" required placeholder="Enter your email" />
                            <span asp-validation-for="CartHeader.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CartHeader.Phone" class="form-label">Phone</label>
                            <input asp-for="CartHeader.Phone" class="form-control" required placeholder="Enter your phone number" />
                            <span asp-validation-for="CartHeader.Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="col-12 col-lg-7">
                        <h5 class="border-bottom pb-2 mb-3 text-primary fw-semibold">Your Order</h5>

                        @if (Model.CartDetails != null && Model.CartDetails.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-borderless align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Qty</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.CartDetails)
                                        {
                                            <tr class="border-bottom">
                                                <td class="d-flex align-items-center">
                                                    <img src="@item.Product?.ImageUrl"
                                                         alt="@item.Product?.Name"
                                                         class="rounded me-3"
                                                         style="width:60px; height:60px; object-fit:cover;" />
                                                    <div>
                                                        <div class="fw-bold">@item.Product?.Name</div>
                                                        <small class="text-muted">@item.Product?.Category</small>
                                                    </div>
                                                </td>
                                                <td>@item.Product?.Price.ToString("C")</td>
                                                <td>@item.Count</td>
                                                <td class="text-end text-success fw-bold">
                                                    @(((item.Product?.Price ?? 0 )* item.Count).ToString("C"))
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Totals Section -->

                            <div class="pt-3 mt-3">
                                @{
                                    double subtotal = Model.CartDetails.Sum(i => (i.Product?.Price ?? 0) * i.Count);
                                    double discount = Model.CartHeader?.Discount ?? 0;
                                    double total = subtotal - discount;
                                }

                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal</span>
                                    <span>@subtotal.ToString("C")</span>
                                </div>

                                <div class="d-flex justify-content-between mb-2">
                                    <span>Discount</span>
                                    <span class="text-success">-@discount.ToString("C")</span>
                                </div>

                                <hr />

                                <div class="d-flex justify-content-between fw-bold fs-5">
                                    <span>Total</span>
                                    <span class="text-primary">@total.ToString("C")</span>
                                </div>  
                            </div>

                        }
                        else
                        {
                            <p class="text-muted fst-italic">Your cart is empty.</p>
                        }
                    </div>
                </div>

                <!-- Checkout Button -->
                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success btn-lg px-5 shadow-sm">
                        <i class="bi bi-credit-card me-2"></i> Confirm Order
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
