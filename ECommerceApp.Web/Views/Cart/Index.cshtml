@model CartDto
@{
    ViewData["Title"] = "Your Shopping Cart";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-gradient text-white" style="background: linear-gradient(90deg, #6366f1, #3b82f6);">
            <h3 class="fw-bold mb-0 text-center">
                <i class="bi bi-cart-fill me-2"></i> Your Shopping Cart
            </h3>
        </div>

        <div class="card-body p-4">
            @if (Model?.CartDetails != null && Model.CartDetails.Any())
            {
                <form asp-action="Checkout" method="post">
                    <!-- Hidden CartHeader bindings -->
                    <input asp-for="CartHeader.Id" type="hidden" />
                    <input asp-for="CartHeader.UserId" type="hidden" />
                    <input asp-for="CartHeader.Discount" type="hidden" />
                    <input asp-for="CartHeader.CartTotal" type="hidden" />

                    <!-- Product Table -->
                    <div class="table-responsive mb-4">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.CartDetails.Count(); i++)
                                {
                                    var item = Model.CartDetails.ElementAt(i);
                                    <tr>
                                        <td class="d-flex align-items-center">
                                            <img src="@(item.Product?.ImageUrl ?? "/images/placeholder.png")"
                                                 alt="@item.Product?.Name"
                                                 class="rounded-3 me-3"
                                                 style="width: 80px; height: 80px; object-fit: cover;">
                                            <div>
                                                <h6 class="fw-semibold mb-1">@item.Product?.Name</h6>
                                                <small class="text-muted">@item.Product?.Category</small>
                                            </div>
                                            <input type="hidden" asp-for="@Model.CartDetails.ElementAt(i).Id" />
                                            <input type="hidden" asp-for="@Model.CartDetails.ElementAt(i).ProductId" />
                                        </td>

                                        <td>@item.Product?.Price.ToString("C")</td>
                                        <td>
                                            <input asp-for="@Model.CartDetails.ElementAt(i).Count"
                                                   type="number"
                                                   min="1"
                                                   class="form-control text-center rounded-pill shadow-sm"
                                                   style="width: 80px;" />
                                        </td>
                                        <td class="fw-semibold text-success">
                                            @(((item.Product?.Price ?? 0) * item.Count).ToString("C"))
                                        </td>
                                        <td>
                                            <a asp-action="RemoveItem"
                                               asp-route-cartDetailsId="@item.Id"
                                               class="btn btn-outline-danger btn-sm rounded-pill">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Coupon + Summary -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">Apply Coupon</h5>

                            <!-- ✅ Separate Form for Coupon Application -->
                            
                                <input type="hidden" name="CartHeader.Id" value="@Model.CartHeader?.Id" />
                            @if (string.IsNullOrEmpty(Model.CartHeader.CouponCode))
                            {
                                <input type="text"
                                name="CartHeader.CouponCode"
                                value="@Model.CartHeader?.CouponCode"
                                class="form-control rounded-start-pill shadow-sm"
                                placeholder="Enter coupon code" />
                                <button type="submit" asp-action="ApplyCoupon" class="btn btn-primary rounded-end-pill px-4">
                                    <i class="bi bi-tag-fill me-1"></i> Apply
                                </button>
                            }
                            else
                            {
                                <input type="text"
                                       name="CartHeader.CouponCode"
                                       value="@Model.CartHeader?.CouponCode"
                                       class="form-control rounded-start-pill shadow-sm"
                                       disabled/>
                                <button type="submit" asp-action="ApplyCoupon" class="btn btn-primary rounded-end-pill px-4">
                                    <i class="bi bi-tag-fill me-1"></i> Remove
                                </button>
                            }
                        </div>

                        <!-- Order Summary -->
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-body">
                                    <h5 class="fw-bold mb-3">Order Summary</h5>

                                    @{
                                        double subtotal = Model.CartDetails.Sum(i => (i.Product?.Price ?? 0) * i.Count);
                                        double discount = Model.CartHeader?.Discount ?? 0;
                                        double total = subtotal - discount;
                                    }

                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal</span>
                                        <span>@subtotal.ToString("C")</span>
                                    </div>

                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Discount</span>
                                        <span class="text-success">-@discount.ToString("C")</span>
                                    </div>

                                    <hr />

                                    <div class="d-flex justify-content-between fw-bold fs-5">
                                        <span>Total</span>
                                        <span class="text-primary">@total.ToString("C")</span>
                                    </div>

                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-success rounded-pill px-5 py-2">
                                            <i class="bi bi-credit-card-2-front me-2"></i> Proceed to Checkout
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Your cart is empty!</h4>
                    <a asp-controller="Home" asp-action="Index"
                       class="btn btn-outline-primary mt-3 rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> Continue Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
