@model IEnumerable<CouponDto>

<div class="card shadow-lg border-0 rounded-4 mt-5">
    <!-- Header -->
    <div class="card-header bg-gradient text-white" style="background: linear-gradient(90deg, #6366f1, #3b82f6);">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-ticket-perforated-fill me-2"></i> Coupons List
                </h2>
            </div>
        </div>
    </div>

    <!-- Body -->
    <div class="card-body p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-6">
                <p class="text-muted mb-0">Manage all discount coupons here</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm px-4">
                    <i class="bi bi-plus-circle me-2"></i> New Coupon
                </a>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table align-middle table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th class="text-uppercase small fw-semibold text-muted">Coupon Code</th>
                        <th class="text-uppercase small fw-semibold text-muted">Discount</th>
                        <th class="text-uppercase small fw-semibold text-muted">Minimum Spend</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.CouponCode</td>
                            <td class="text-success fw-bold">@item.DiscountAmount.ToString("c")</td>
                            <td>@item.MinimumAmount.ToString("c")</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                    <i class="bi bi-trash3-fill me-1"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
