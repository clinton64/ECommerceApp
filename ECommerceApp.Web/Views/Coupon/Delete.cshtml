@model CouponDto

<div class="card shadow-lg border-0 rounded-4 mt-5">
    <!-- Header -->
    <div class="card-header text-white" style="background: linear-gradient(90deg, #ef4444, #dc2626);">
        <h2 class="fw-bold mb-0 text-center">
            <i class="bi bi-trash3-fill me-2"></i> Delete Coupon
        </h2>
    </div>

    <!-- Body -->
    <div class="card-body p-4">
        <h5 class="mb-4 text-center text-muted">Are you sure you want to delete this coupon?</h5>

        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold text-muted">Coupon Code</dt>
            <dd class="col-sm-8">@Model.CouponCode</dd>

            <dt class="col-sm-4 fw-semibold text-muted">Discount Amount</dt>
            <dd class="col-sm-8 text-success fw-bold">@Model.DiscountAmount.ToString("c")</dd>

            <dt class="col-sm-4 fw-semibold text-muted">Minimum Amount</dt>
            <dd class="col-sm-8">@Model.MinimumAmount.ToString("c")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
                <button type="submit" class="btn btn-danger rounded-pill shadow-sm px-5">
                    <i class="bi bi-trash3-fill me-2"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>
