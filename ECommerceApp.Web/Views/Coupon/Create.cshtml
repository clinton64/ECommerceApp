@model CouponDto

<div class="card shadow-lg border-0 rounded-4 mt-5">
    <!-- Header -->
    <div class="card-header bg-gradient text-white" style="background: linear-gradient(90deg, #6366f1, #3b82f6);">
        <h2 class="fw-bold mb-0 text-center">
            <i class="bi bi-plus-circle-dotted me-2"></i> Create Coupon
        </h2>
    </div>

    <!-- Body -->
    <div class="card-body p-4">
        <form asp-action="Create">
            <div class="mb-4">
                <label asp-for="CouponCode" class="form-label fw-semibold"></label>
                <input asp-for="CouponCode" class="form-control rounded-3 shadow-sm" placeholder="Enter coupon code" />
                <span asp-validation-for="CouponCode" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DiscountAmount" class="form-label fw-semibold"></label>
                <input asp-for="DiscountAmount" class="form-control rounded-3 shadow-sm" placeholder="e.g. 10.00" />
                <span asp-validation-for="DiscountAmount" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="MinimumAmount" class="form-label fw-semibold"></label>
                <input asp-for="MinimumAmount" class="form-control rounded-3 shadow-sm" placeholder="e.g. 50.00" />
                <span asp-validation-for="MinimumAmount" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary rounded-pill shadow-sm px-5">
                    <i class="bi bi-check-circle-fill me-2"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
