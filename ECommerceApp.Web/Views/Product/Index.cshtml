@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow-lg border-0 rounded-4 mt-5">
    <!-- Header -->
    <div class="card-header bg-gradient text-white" style="background: linear-gradient(90deg, #6366f1, #3b82f6);">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-box-seam me-2"></i> Product List
                </h2>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Create" class="btn btn-light rounded-pill shadow-sm px-4">
                    <i class="bi bi-plus-circle me-2"></i> Add Product
                </a>
            </div>
        </div>
    </div>

    <!-- Body -->
    <div class="card-body p-4">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                            <div class="position-relative">
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                                <span class="badge bg-primary position-absolute top-0 end-0 m-2 px-3 py-2 rounded-pill">@item.Category</span>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@item.Name</h5>
                                <p class="card-text text-muted small flex-grow-1">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="fw-bold text-success fs-6">@item.Price.ToString("C")</span>
                                    <div>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill me-1">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-box-seam display-1 text-muted"></i>
                <p class="mt-3 text-muted">No products available. Add your first product to get started!</p>
            </div>
        }
    </div>
</div>
